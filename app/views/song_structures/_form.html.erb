<%= form_for @song_structure, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :song_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:song_id, Song.all,:id,:name, :class => 'number_field') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :section, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field(:section, :class => 'text_field') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :order, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :order, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:note_id, Note.where("form" => "major"), :id, :name, :class => 'number_field') %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                song_structures_path, :class => 'btn' %>
  </div>
<% end %>
