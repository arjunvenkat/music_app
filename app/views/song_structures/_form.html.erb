<%= form_tag "/song_structures"  do %>
  <div class="control-group">
    <%= label_tag(:song_id, "Song") %>
    <div class="controls">
      <%= select_tag(:song_id, options_for_select(@songs_info)) %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:section, "Section") %>
    <div class="controls">
      <%= select_tag(:section, options_for_select(@sections)) %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:order, "Order") %>
    <div class="controls">
      <%= number_field_tag :order %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:note_name, "Note") %>
    <div class="controls">
      <%= select_tag(:note_name, options_for_select(@notes))%>
    </div>
  </div>

 	<div class="control-group">
    <%= label_tag(:note_form, "Type") %>
    <div class="controls">
      <%= select_tag(:note_form, options_for_select([["major", "major"],["minor", "minor"]]))%>
    </div>
  </div>

  <p>
     <%= submit_tag("Submit", :class => 'btn btn-primary') %>
		 <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		                song_structures_path, :class => 'btn' %>
  </p>
<% end %>

