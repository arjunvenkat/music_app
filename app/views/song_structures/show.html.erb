<%- model_class = SongStructure -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:song_id) %>:</strong></dt>
  <dd><%= @song_structure.song_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:section) %>:</strong></dt>
  <dd><%= @song_structure.section %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order) %>:</strong></dt>
  <dd><%= @song_structure.order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note_id) %>:</strong></dt>
  <dd><%= @song_structure.note_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              song_structures_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_structure_path(@song_structure), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_structure_path(@song_structure),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
